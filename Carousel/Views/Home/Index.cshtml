@model HomeVM
<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Slides.Count; i++)
        {
            <li data-bs-target="#myCarousel" data-bs-slide-to="@i" @(i == 0 ? "class='active'" : "")></li>
        }

    </ol>
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Slides.Count; i++)
        {
            <div class="carousel-item @(i==0?"active":"")">
                <div class="slideBG" style="background-image:url(@Model.Slides[i].Picture)"></div>
                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>@Model.Slides[i].Title</h1>
                        <p>@Model.Slides[i].Description</p>
                        <p><a class="btn btn-lg btn-primary" href="@Model.Slides[i].Link" role="button">Detail</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>


<!-- Marketing messaging and featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container marketing">

    <!-- Three columns of text below the carousel -->
    <div class="row">
        @foreach (Product p in Model.Products)
        {
            <div class="col-lg-4">
                <img src="@p.Picture" alt="@p.Name" class="productImg" />
                <h2>@p.Name</h2>
                <p>@p.Description</p>
                <p><a class="btn btn-secondary" asp-controller="Product" asp-action="Detail" asp-route-name="@p.Name" role="button">Detaylı Bilgi</a></p>
            </div>
        }

    </div><!-- /.row -->
    <!-- START THE FEATURETTES -->

    @for (int i = 0; i < Model.News.Count; i++)
    {
        <hr class="featurette-divider">
        <div class="row featurette">
            <div class="col-md-7 @(i%2!=0?"order-md-2":"")">
                <h2 class="featurette-heading">@Model.News[i].Title</h2>
                <p class="lead">@Model.News[i].Description</p>
            </div>
            <div class="col-md-5">
                <img src="@Model.News[i].Picture" alt="@Model.News[i].Title" class="newsIMG" />
            </div>
        </div>
    }
    <hr class="featurette-divider">


    <!-- /END THE FEATURETTES -->

</div><!-- /.container -->